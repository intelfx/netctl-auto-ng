# Maintainer: Ivan Shapovalov <intelfx100@gmail.com>

pkgname=netctl-auto-wireless
pkgver=%NAW_VERSION%
url="https://github.com/intelfx/netctl-auto-wireless"
pkgrel=1
pkgdesc="Extended automatic wireless management script using netctl"
license=("GPL3")
backup=(etc/conf.d/netctl-auto-wireless)
depends=("netctl" "wpa_supplicant" "wpa_actiond")
source=("${url}/archive/v${pkgver}.tar.gz")
arch=(any)

package() {
  cd "$srcdir/${pkgname}-${pkgver}"
  DESTDIR="$pkgdir" ./install.sh "$pkgver"
}

